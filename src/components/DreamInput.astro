---
// Componente para ingresar el texto del sueño
---

<div class="dream-input-container">
  <h2 class="dream-input-title">Relátame tu sueño, mortal</h2>
  <p class="dream-input-subtitle">Descifraré los mensajes ocultos en tus visiones nocturnas</p>
  
  <div class="input-wrapper">
    <textarea 
      id="dreamText" 
      class="dream-textarea" 
      placeholder="Soñé que..."
      rows="6"
    ></textarea>
    
    <button id="interpretBtn" class="interpret-btn">
      <span class="btn-text">Revelar significado</span>
      <span class="btn-icon">✨</span>
    </button>

    <script>
      // Reproduce el audio (solo si el textarea no está vacío)
      const btn = document.getElementById('interpretBtn');
      const textarea = document.getElementById('dreamText');
      if (btn && textarea) {
        btn.addEventListener('click', () => {
          const dreamText = (textarea instanceof HTMLTextAreaElement ? textarea.value.trim() : "");
          if (!dreamText) {
            return;
          }
          const audio = new Audio('/dream.mp3');  
          audio.play();
        });
      }
    </script>
  </div>
</div>

<style>
  .dream-input-container {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 2rem;
    transition: all 0.3s ease;
  }

  .dream-input-container:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .dream-input-title {
    font-size: 1.8rem;
    font-weight: 300;
    color: #f1f5f9;
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.5px;
  }

  .dream-input-subtitle {
    font-size: 0.95rem;
    color: #94a3b8;
    margin: 0 0 1.5rem 0;
    font-weight: 300;
  }

  .input-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .dream-textarea {
    width: 100%;
    padding: 1rem;
    background: rgba(15, 23, 42, 0.5);
    border: 1px solid rgba(148, 163, 184, 0.3);
    border-radius: 12px;
    color: #e2e8f0;
    font-size: 1rem;
    font-family: inherit;
    resize: vertical;
    min-height: 120px;
    transition: all 0.3s ease;
    line-height: 1.6;
  }

  .dream-textarea::placeholder {
    color: #64748b;
    font-style: italic;
  }

  .dream-textarea:focus {
    outline: none;
    border-color: rgba(167, 139, 250, 0.6);
    background: rgba(15, 23, 42, 0.7);
    box-shadow: 0 0 20px rgba(167, 139, 250, 0.15);
  }

  .interpret-btn {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 1.1rem;
    font-weight: 400;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    letter-spacing: 0.3px;
  }

  .interpret-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .interpret-btn:hover::before {
    left: 100%;
  }

  .interpret-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(139, 92, 246, 0.4);
  }

  .interpret-btn:active {
    transform: translateY(0);
  }

  .btn-icon {
    font-size: 1.2rem;
    animation: sparkle 2s ease-in-out infinite;
  }

  @keyframes sparkle {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
  }

  @media (max-width: 768px) {
    .dream-input-container {
      padding: 1.5rem;
    }

    .dream-input-title {
      font-size: 1.5rem;
    }

    .interpret-btn {
      font-size: 1rem;
      padding: 0.875rem 1.5rem;
    }
  }
</style>
