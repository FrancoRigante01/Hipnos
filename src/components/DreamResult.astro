---
// Componente para mostrar el resultado de la interpretaci√≥n
---

<div id="dreamResult" class="dream-result-container hidden">
  <div class="result-background" id="resultBackground"></div>
  
  <div class="result-content">
    <div class="result-header">
      <h3 class="result-keyword" id="resultKeyword"></h3>
      <p class="result-symbolism" id="resultSymbolism"></p>
    </div>
    
    <div class="result-body">
      <p class="result-interpretation" id="resultInterpretation"></p>
    </div>

    <div class="result-footer">
      <p class="result-dream-text" id="resultDreamText"></p>
    </div>
  </div>
</div>

<style>
  .dream-result-container {
    position: relative;
    padding: 2.5rem;
    border-radius: 20px;
    margin-bottom: 2rem;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.15);
    transition: all 0.5s ease;
    animation: fadeInUp 0.6s ease;
  }

  .hidden {
    display: none;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .result-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    opacity: 0.3;
    transition: all 0.8s ease;
  }

  /* Animaciones */
    0%, 100% { transform: translateX(0) scale(1); }
    50% { transform: translateX(10px) scale(1.05); }
  }

  @keyframes cloudFloat {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(15px, -10px); }
  }

  @keyframes geometricShift {
    0% { background-position: 0 0; }
    100% { background-position: 40px 40px; }
  }

  @keyframes organicPulse {
    0%, 100% { transform: scale(1); opacity: 0.3; }
    50% { transform: scale(1.1); opacity: 0.4; }
  }

  @keyframes flameFlicker {
    0%, 100% { transform: scaleY(1) scaleX(1); }
    25% { transform: scaleY(1.05) scaleX(0.98); }
    50% { transform: scaleY(0.98) scaleX(1.02); }
    75% { transform: scaleY(1.02) scaleX(0.99); }
  }

  @keyframes peakShimmer {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.3; }
  }

  @keyframes starTwinkle {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.5; }
  }

  @keyframes floralGrow {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.08); }
  }

  @keyframes portalSpin {
    0% { transform: rotate(0deg) scale(1); }
    100% { transform: rotate(360deg) scale(1); }
  }

  @keyframes reflectionShine {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.5; }
  }

  @keyframes rainFall {
    0% { background-position: 0 0; }
    100% { background-position: 0 50px; }
  }

  @keyframes scalesSlither {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(8px); }
  }

  @keyframes radianceGlow {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.6; }
  }

  @keyframes featherFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .result-content {
    position: relative;
    z-index: 1;
  }

  .result-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .result-keyword {
    font-size: 2rem;
    font-weight: 300;
    color: #f1f5f9;
    margin: 0 0 0.5rem 0;
    text-transform: capitalize;
    letter-spacing: 1px;
  }

  .result-symbolism {
    font-size: 1rem;
    color: #cbd5e1;
    margin: 0;
    font-style: italic;
    font-weight: 300;
  }

  .result-body {
    margin-bottom: 1.5rem;
  }

  .result-interpretation {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #e2e8f0;
    margin: 0;
    font-weight: 300;
  }

  .result-footer {
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .result-dream-text {
    font-size: 0.9rem;
    color: #94a3b8;
    margin: 0;
    font-style: italic;
    line-height: 1.6;
  }

  .result-dream-text::before {
    content: '"';
    color: rgba(167, 139, 250, 0.5);
  }

  .result-dream-text::after {
    content: '"';
    color: rgba(167, 139, 250, 0.5);
  }

  @media (max-width: 768px) {
    .dream-result-container {
      padding: 1.5rem;
    }

    .result-keyword {
      font-size: 1.6rem;
    }

    .result-interpretation {
      font-size: 1rem;
    }
  }
</style>
